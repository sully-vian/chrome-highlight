{
    "manifest_version": 3,
    "name": "Chrome Highlight",
    "version": "1.0",
    "description": "TODO",
    "permissions": [
        "storage",
        "scripting"
    ],
    "action": {
        "default_popup": "popup/popup.html"
    },
    "content_scripts": [
        {
            "matches": [
                "file:///*",
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "vendor/highlight.min.js",
                "scripts/content.js"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "vendor/monokai.min.css",
                "vendor/nord.min.css",
                "vendor/github-dark.min.css"
            ],
            "matches": [
                "file:///*",
                "https://*/*",
                "http://*/*"
            ]
        }
    ]
}
